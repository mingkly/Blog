<script>
    var $span=$("<span class='badge rounded-circle bg-danger text-white mt-0 mr-0'></span>");
    $(function(){

        if(replyCount!=0){
            $("#replyLink").append($span.clone().html(replyCount));
        }
        if(notifyCount!=0){
           $("#notifyLink").append($span.clone().html(notifyCount));
        }
        if(chatCount!=0){
           $("#chatLink").append($span.clone().html(chatCount));
        }
    })
</script>